<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.guide.lunar"
    android:versionCode="1"
    android:versionName="0.2" >

    <uses-sdk android:minSdkVersion="8" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".MainApp"
        android:icon="@drawable/mainicon"
        android:label="@string/app_name" >
        <activity
            android:name=".LunarActivity"
            android:label="@string/app_name"
            android:theme="@style/Common_Theme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ViolationActivity" android:label="@string/breakrules_title" android:theme="@style/Common_Theme"></activity>
    </application>

</manifest>