<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.11" >

        <TextView
            android:id="@+id/textView1"
            style="@style/tvLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="46dp"
            android:text="@string/txtView_DatabaseLabel"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView2"
            style="@style/tvLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_marginLeft="45dp"
            android:layout_toRightOf="@+id/textView1"
            android:text="@string/txtView_DatabaseDate"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <AutoCompleteTextView
            android:id="@+id/carEngineID"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="124dp"
            android:ems="10"
            android:maxLength="6"
            android:singleLine="true" />

        <TextView
            android:id="@+id/textView4"
            style="@style/tvLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/carEngineID"
            android:layout_alignLeft="@+id/carEngineID"
            android:layout_marginBottom="32dp"
            android:text="@string/txtView_CarEngieID"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/btnQuery"
            style="@style/button_action_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="51dp"
            android:layout_toRightOf="@+id/carEngineID"
            android:text="@string/btn_Query" />

        <AutoCompleteTextView
            android:id="@+id/fieldCarID"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView4"
            android:layout_marginBottom="28dp"
            android:layout_toLeftOf="@+id/btnQuery"
            android:ems="10"
            android:maxLength="7"
            android:singleLine="true"
            android:text="@string/tvCarIDXZ" >

            <requestFocus />
        </AutoCompleteTextView>

        <TextView
            android:id="@+id/textView3"
            style="@style/tvLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/fieldCarID"
            android:layout_alignLeft="@+id/fieldCarID"
            android:layout_marginBottom="14dp"
            android:text="@string/txtView_CarIDLabel"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView5"
            style="@style/tvLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView3"
            android:layout_marginBottom="28dp"
            android:layout_toLeftOf="@+id/textView2"
            android:text="@string/tvCarType"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/spiCarTypeList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignRight="@+id/btnQuery" />

    </RelativeLayout>

</LinearLayout>