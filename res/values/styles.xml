<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Common_Theme" parent="@android:style/Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="panel_background">
        <item name="android:background">@drawable/shape_panel_background</item>
    </style>
    
    <style name="homeTitleBackground">
        <item name="android:background">@drawable/bg_header</item>
    </style>
    <style name="homeTitle">
        <item name="android:windowTitleSize">45dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/homeTitleBackground</item>
    </style>

	<style name="violationInfoText">
	    <item name="android:paddingLeft">4px</item>
	    <item name="android:paddingBottom">4px</item>
	    <item name="android:textColor">#ff333333</item>
		<!--
 	    <item name="android:shadowColor">#11000000</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1</item>
	    <item name="android:background">@null</item>
	    -->
	</style>

    <style name="MMTabButton">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textColor">@color/selector_tab_button_text_color</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/selector_tab_button_bg</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">0.70000005dip</item>
        <item name="android:layout_marginRight">0.70000005dip</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    
    <style name="tvLabel">
        <item name="android:textColor">@color/tvLabel</item>
    </style>

    <style name="header_action_back">
        <item name="android:textSize">@dimen/header_action</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/selector_btn_header_action</item>
        <item name="android:background">@drawable/selector_btn_action_back</item>
    </style>
    
    <style name="header_action_additional">
        <item name="android:textSize">@dimen/header_action</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/selector_btn_header_action</item>
        <item name="android:background">@drawable/selector_btn_action_additional</item>
    </style>
    
    <style name="button_action_submit">
        <item name="android:textSize">@dimen/button_submit</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/selector_btn_action_submit</item>
        <item name="android:background">@drawable/selector_btn_action_submit</item>
    </style>
    
    <style name="button_common">
        <item name="android:textSize">@dimen/button_submit</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#888888</item>
        <item name="android:background">@drawable/selector_comm_button_bg</item>
    </style>
</resources>